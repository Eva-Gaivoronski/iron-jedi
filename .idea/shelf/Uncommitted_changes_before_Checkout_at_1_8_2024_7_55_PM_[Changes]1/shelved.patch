+                <header className="Header">
+                    <p></p>
+                    <div>
+                        {loading ? (
+                            <p>Loading...</p>
+                        ) : (
+                            <>
+                                <p dangerouslySetInnerHTML={{ __html: quiz }}></p>
+                                <form>
+                                    {options.map((option, index) => (
